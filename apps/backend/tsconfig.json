{
  "compilerOptions": {
    /* === File Structure === */
    "rootDir": "src",
    "outDir": "dist",

    /* === Language Target === */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* === Type Checking === */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* === Source Maps (for debugging) === */
    "sourceMap": true,

    /* === Node Types === */
    "types": ["node", "express"],
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
